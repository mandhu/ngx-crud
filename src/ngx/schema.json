{
    "$schema": "http://json-schema.org/schema",
    "id": "ngxSchema",
    "title": "Creates a simple schematic.",
    "type": "object",
    "properties": {
        "name": {
            "description": "Specifies the name of the generated Class.",
            "type": "string",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "file": {
            "description": "Specifies the file of the generated Class.",
            "type": "string",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": [
    ],
    "additionalProperties": false
}
