{
  "title": "Hotel Maldives",
  "entity": "hotel",
  "api": "/api/hotel",
  "filter": [
    "city"
  ],
  "fields": [
    {
      "name": "name",
      "dbType": "string",
      "htmlType": "text",
      "placeholder": "Name",
      "sort": true
    },
    {
      "name": "age",
      "dbType": "integer",
      "htmlType": "number",
      "placeholder": "Age",
      "sort": true,
      "validates": [
        "required",
        "email"
      ]
    },
    {
      "name": "branch",
      "dbType": "string",
      "htmlType": "text",
      "placeholder": "Branch",
      "sort": false
    },
    {
      "name": "expired_at",
      "dbType": "date",
      "htmlType": "date",
      "sort": false
    },{
      "name": "status",
      "dbType": "integer",
      "htmlType": "select",
      "options": [
        {"1":  "Active"},
        {"2":  "Suspended"},
        {"3":  "Out of town"}
      ],
      "sort": false
    },
    {
      "name": "remarks",
      "dbType": "text",
      "htmlType": "textarea",
      "sort": false
    },
    {
      "name": "employee_id",
      "htmlType": "select-auto",
      "validates": [
        "required"
      ]
    }

  ]
}
